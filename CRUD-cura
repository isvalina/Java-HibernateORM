    private javax.swing.JTextField txtKuna;
    private javax.swing.JTextField txtMaraka;
    private javax.swing.JTextField txtVesta;
    // End of variables declaration                   

    private void ucitaj() {
        DefaultListModel m = new DefaultListModel();
            for (Cura c : oc.read()) {
            m.addElement(c);
        }
        lstCura.setModel(m);
    }
