    private void btnObrisiActionPerformed(java.awt.event.ActionEvent evt) {                                          
        Cura c;
        try {
            DefaultListModel m = (DefaultListModel) lstCura.getModel();
            c = (Cura) m.get(lstCura.getSelectedIndex());
        } catch (Exception e) {
            JOptionPane.showConfirmDialog(rootPane, "Prvo odaberite stavku");
            return;
        }
        try {
            oc.delete(c);
        } catch (Exception ex) {
            JOptionPane.showConfirmDialog(rootPane, "Prvo odaberite stavku");
        }
        ucitaj();
    }                                         

    private void btnDodajActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Cura c = new Cura();
        c.setMaraka(Double.parseDouble(txtMaraka.getText()));
        c.setVesta(txtVesta.getText());
        c.setKuna(Double.parseDouble(txtMaraka.getText()));
        c.setDukserica(txtDuks.getText());
        
        oc.create(c);
        ucitaj();
    }                                        

    private void btnPromjeniActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Cura c;
        try {
            DefaultListModel m = (DefaultListModel) lstCura.getModel();
            c = (Cura) m.get(lstCura.getSelectedIndex());
        } catch (Exception e) {
            JOptionPane.showConfirmDialog(rootPane, "Prvo odaberite željenu stavku");
            return;
        }

        c.setMaraka(Double.parseDouble(txtMaraka.getText()));
        c.setVesta(txtVesta.getText());
        c.setKuna(Double.parseDouble(txtKuna.getText()));
        c.setDukserica(txtDuks.getText());

        oc.update(c);
        ucitaj();
    }                                           

    private void lstCuraValueChanged(javax.swing.event.ListSelectionEvent evt) {                                     
        try {
            DefaultListModel m = (DefaultListModel) lstCura.getModel();
            Cura c = (Cura) m.get(lstCura.getSelectedIndex());
            txtMaraka.setText(c.getMaraka()+ " ");
            txtVesta.setText(c.getVesta());
            txtKuna.setText(c.getKuna()+ " ");
            txtDuks.setText(c.getDukserica());

        } catch (Exception e) {
        }
    }                                    

  
