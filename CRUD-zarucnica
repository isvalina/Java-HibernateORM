    private javax.swing.JLabel jLabel5;
    private javax.swing.JLabel jLabel6;
    private javax.swing.JLabel jLabel7;
    private javax.swing.JScrollPane jScrollPane1;
    private javax.swing.JList<String> lstZarucnica;
    private javax.swing.JTextField txtBojaKose;
    private javax.swing.JTextField txtHlace;
    private javax.swing.JTextField txtJmbag;
    private javax.swing.JTextField txtModel;
    private javax.swing.JTextField txtNarukvica;
    private javax.swing.JTextField txtOgrlica;
    // End of variables declaration                   

    private void ucitaj() {
        DefaultListModel m = new DefaultListModel();
        for (Zarucnica z : oz.read()) {
            m.addElement(z);
        }
        lstZarucnica.setModel(m);
    }
}
