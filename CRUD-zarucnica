    private void btnDodajActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Zarucnica z = new Zarucnica();
        z.setBojakose(txtBojaKose.getText());
        z.setJmbag(txtJmbag.getText());
        z.setHlace(txtHlace.getText());
        z.setModelnaocala(txtModel.getText());
        z.setNarukvica(Long.parseLong(txtNarukvica.getText()));
        z.setOgrlica(Long.parseLong(txtOgrlica.getText()));

        DefaultComboBoxModel m = (DefaultComboBoxModel) cmbCura.getModel();
        z.setCura((Cura) m.getElementAt(cmbCura.getSelectedIndex()));

        oz.create(z);
        ucitaj();
    }                                        

    private void btnPromjeniActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Zarucnica z;
        try {
            DefaultListModel m = (DefaultListModel) lstZarucnica.getModel();
            z = (Zarucnica) m.get(lstZarucnica.getSelectedIndex());
        } catch (Exception e) {
            JOptionPane.showConfirmDialog(rootPane, "Prvo odaberite željenu stavku");
            return;
        }
        z.setBojakose(txtBojaKose.getText());
        z.setJmbag(txtJmbag.getText());
        z.setHlace(txtHlace.getText());
        z.setModelnaocala(txtModel.getText());
        z.setNarukvica(Long.parseLong(txtNarukvica.getText()));
        z.setOgrlica(Long.parseLong(txtNarukvica.getText()));

        DefaultComboBoxModel m = (DefaultComboBoxModel) cmbCura.getModel();
        z.setCura((Cura) m.getElementAt(cmbCura.getSelectedIndex()));

        oz.update(z);
        ucitaj();
    }                                           

    private void lstZarucnicaValueChanged(javax.swing.event.ListSelectionEvent evt) {                                          
        try {
            DefaultListModel m = (DefaultListModel) lstZarucnica.getModel();
            Zarucnica z = (Zarucnica) m.get(lstZarucnica.getSelectedIndex());
            txtBojaKose.setText(z.getBojakose());
            txtJmbag.setText(z.getJmbag());
            txtHlace.setText(z.getHlace());
            txtModel.setText(z.getModelnaocala());
            txtNarukvica.setText(z.getNarukvica() + " ");
            txtOgrlica.setText(z.getOgrlica() + " ");

            DefaultComboBoxModel mo = (DefaultComboBoxModel) cmbCura.getModel();
            for (int i = 0; i < mo.getSize(); i++) {
                if (((Cura) mo.getElementAt(i)).getId() == z.getCura().getId()) {
                    cmbCura.setSelectedIndex(i);
                    break;
                }
            }

        } catch (Exception e) {
        }
    }                                         

    private void btnObrisiActionPerformed(java.awt.event.ActionEvent evt) {                                          
        Zarucnica z;
        try {
            DefaultListModel m = (DefaultListModel) lstZarucnica.getModel();
            z = (Zarucnica) m.get(lstZarucnica.getSelectedIndex());
        } catch (Exception e) {
            JOptionPane.showConfirmDialog(rootPane, "Prvo odaberite stavku");
            return;
        }
        try {
            oz.delete(z);
        } catch (Exception ex) {
            JOptionPane.showConfirmDialog(rootPane, "Prvo odaberite stavku");
        }
        ucitaj();
    }                                         


    // Variables declaration - do not modify                     
